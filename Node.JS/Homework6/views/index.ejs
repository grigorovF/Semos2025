<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Students</title>
  <link rel="stylesheet" href="style.css" />

</head>
<body>

    <h3>Ime: <%= ime %> <%= prezime %></h3>

    <ul>
    <% niza.forEach(g => { %>
        <li><%= g %></li>
    <% }) %>
    </ul>

    <table border="1" width="100%">
    <tr>
        <th>Ime</th>
        <th>Prezime</th>
        <th>Prosek</th>
        <th>Akcija</th>
    </tr>

    <% studenti.forEach(s => { %>
        <tr>
        <td><%= s.ime %></td>
        <td><%= s.prezime %></td>
        <td><%= s.prosek %></td>
        <td>
            <form action="/delete/<%= s.id %>" method="post">
            <button type="submit">Delete</button>
            </form>
        </td>
        </tr>
    <% }) %>
    </table>

        <h2>Dodadi student</h2>

    <form action="/add" method="post">
        <input type="text" name="ime" placeholder="Ime" required />
        <input type="text" name="prezime" placeholder="Prezime" required />
        <input type="number" name="prosek" step="0.1" required />
        <button type="submit">Dodadi</button>
    </form>

</body>
</html>
